{{>layout/header}}

<h1>Unsolved Problems</h1>
<h2>of {{school.schoolName}}</h2>
<span>총 <strong>{{unsolved.totalProblems}}</strong>개의 풀지 않은 문제가 있습니다.</span>

<div class="problem-list">
    <!--  문제 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>문제번호</th>
            <th>제목</th>
            <th>티어</th>
            <th>맞은 사람</th>
            <th>평균 시도 횟수</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#unsolved.appearedProblems}}
            <tr>
                <td>{{problemId}}</td>
                <td><a href="https://www.boj.kr/{{problemId}}">{{title}}</a></td>
                <td>{{tier.title}}</td>
                <td>{{acTries}}</td>
                <td>{{avgTries}}</td>
            </tr>
        {{/unsolved.appearedProblems}}
        </tbody>
    </table>
</div>

{{>layout/footer}}